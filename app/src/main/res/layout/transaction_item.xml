<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    app:cardBackgroundColor="#ccc"
    android:id="@+id/cardView"
    app:cardCornerRadius="3dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:id="@+id/transaction_card_image"/>

        <TextView
            android:id="@+id/transaction_card_requester"
            android:layout_toRightOf="@+id/transaction_card_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:text="Requester"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/transaction_card_date"
            android:layout_below="@+id/transaction_card_requester"
            android:layout_alignStart="@+id/transaction_card_requester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textSize="15sp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>

