<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.TransactionDetailsFragment">

    <LinearLayout
        android:id="@+id/detail_info_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:orientation="vertical">

        <TextView
            android:id="@+id/transaction_transactionCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:autoSizeMaxTextSize="22dp"
            android:autoSizeMinTextSize="12dp"
            android:text="@string/transactionCode"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/transaction_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:autoSizeMaxTextSize="22dp"
            android:autoSizeMinTextSize="12dp"
            android:text="@string/status"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:autoSizeMaxTextSize="22dp"
            android:autoSizeMinTextSize="12dp"
            android:text="@string/date"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/transaction_requester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:autoSizeMaxTextSize="22dp"
            android:autoSizeMinTextSize="12dp"
            android:text="@string/requester"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/transaction_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:autoSizeMaxTextSize="22dp"
            android:autoSizeMinTextSize="12dp"
            android:text="@string/location"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/transaction_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:autoSizeMaxTextSize="22dp"
            android:autoSizeMinTextSize="12dp"
            android:text="@string/description"
            android:textSize="18sp"></TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:autoSizeMaxTextSize="25dp"
        android:autoSizeMinTextSize="16dp"
        android:foregroundGravity="center_vertical"
        android:gravity="center"
        android:text="TRANSACTION DETAILS"
        android:textColor="#2f2f2f"
        android:textSize="22sp" />

</FrameLayout>
